% # encoding: utf-8

<h3>Admin Login</h3>
<form action="/admin/login" method="POST" class="form_signup">

  <label>Email</label>
  <input type="text" name="admin[email]" value="{{ params["email"] }}">
  <br>

  <label>Password</label>
  <input type="password" name="admin[password]" value="">

  <div>
    <button type="submit" name="login" class="btn_grey">Login</button>
  </div>
</form>