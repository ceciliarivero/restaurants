% # encoding: utf-8

<h3>Add new restaurant</h3>
<form action="/add_restaurant" method="POST" class="form_add_restaurant">
  <label>Name:</label>
  <input type="text" name="restaurant[name]" value="{{ edit.name }}">
  <br>

  <label>Cuisine</label>
  <input type="text" name="restaurant[cuisine]" value="{{ edit.cuisine }}">
  <br>

  <label>Rating</label>
  <input type="text" name="restaurant[rating]" value="{{ edit.rating }}">
  <br>

  <div>
    <button type="submit" name="add" class="btn_grey">Add</button>
  </div>
</form>
<br><br>
<a href="/" class="btn_grey">Back to restaurants</a>