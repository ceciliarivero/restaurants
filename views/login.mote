% # encoding: utf-8

<h3>Login</h3>
<form action="/user/login" method="POST" id="form_signup">

  <label>Email</label>
  <input type="text" name="user[email]" value="{{ params["email"] }}">
  <br>

  <label>Password</label>
  <input type="password" name="user[password]" value="">

  <div>
    <button type="submit" name="login" id="btn_grey">Login</button>
  </div>
</form>